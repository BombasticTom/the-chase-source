<?xml version="1.0" encoding="utf-8" ?>
<vbox>
    <section-header text="odabir rundi" />
    
    <hbox style="border: 1px solid $normal-border-color;padding-left:1px;padding-right:1px;" width="75%">
        <button-bar id="gamemodeBar" styleName="left-menu" direction="vertical" selectedIndex="0">
            <button text="MENI" icon="haxeui-core/styles/default/haxeui_small.png" />
            <button text="PRVA RUNDA" icon="haxeui-core/styles/default/haxeui_small.png" />
            <!--<button text="DRUGA RUNDA" icon="haxeui-core/styles/default/haxeui_small.png" />
            <button text="TRECA RUNDA" icon="haxeui-core/styles/default/haxeui_small.png" /> -->
        </button-bar>
        
        <hbox width="100%" height="100%">
            <stack id="stack1" width="50%" height="100%" style="padding:10px;">
                <box width="100%" height="100%">
                    <label text="MENI" horizontalAlign="center"/>
                </box>
                <box width="100%" height="100%">
                    <vbox>
                        <label text="PRVA RUNDA" horizontalAlign="center"/>
                        <hbox>
                            <button text="Pokreni Timer" id="timer" toggle="true" selected="true" disabled = "true" icon="haxeui-core/styles/default/haxeui_small.png" />
                            <button text="Dodaj Sumu" id="sum" icon="haxeui-core/styles/default/haxeui_small.png" />
                            <button text="Zavrsi Rundu" id="endgame" icon="haxeui-core/styles/default/haxeui_small.png" />
                        </hbox>
                    </vbox>
                </box>
                <box width="100%" height="100%">
                    <vbox>
                        <label text="DRUGA RUNDA" horizontalAlign="center"/>
                        <hbox>
                            <button text="Item 1A" icon="haxeui-core/styles/default/haxeui_small.png" />
                            <button text="Item 1B" icon="haxeui-core/styles/default/haxeui_small.png" />
                            <button text="Item 1C" icon="haxeui-core/styles/default/haxeui_small.png" />
                        </hbox>
                    </vbox>
                </box>
                <box width="100%" height="100%">
                    <vbox>
                        <label text="TRECA RUNDA" horizontalAlign="center"/>
                        <hbox>
                            <button text="Item 1A" icon="haxeui-core/styles/default/haxeui_small.png" />
                            <button text="Item 1B" icon="haxeui-core/styles/default/haxeui_small.png" />
                            <button text="Item 1C" icon="haxeui-core/styles/default/haxeui_small.png" />
                        </hbox>
                    </vbox>
                </box>
            </stack>
        </hbox>
    </hbox> 
</vbox>